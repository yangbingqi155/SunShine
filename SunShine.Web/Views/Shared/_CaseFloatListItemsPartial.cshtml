@using SunShine.Model;
@model List<ArticleViewModel>
@{
    Layout = null;
}
@{
    if (Model != null&&Model.Count>0) {
        for (int i = 0; i < Model.Count; i++) {
            <div class="case_float_list_item">
                <div class="itemimg">
                    @if (!string.IsNullOrEmpty(Model[i].img)) {
                        <img src="@Url.Content(Model[i].img)" />
                    }
                </div>
                <div class="itemdesc">
                    <div class="itemtitle">@Model[i].title</div>
                </div>
            </div>
        }
        <div style="clear:both;"></div>

    }
    else {
        <div class="no_data_div">暂无数据！</div>
    }
}

