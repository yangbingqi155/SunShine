@using SunShine.Model;
@model List<ArticleViewModel>
@{
    Layout = null;
}
@if (Model != null && Model.Count > 0)
{
    <div style="width:1444px;margin:0px auto;">
        <div class="picture_center"><img src="~/Images/home/fuwubiaoyu_1.jpg" /></div>
        <br />
        <div class="gundongbejing">
            <div class="gundongxiaoguo">
                <ul>
                    @foreach (var item in Model)
                    {
                        if (!string.IsNullOrEmpty(item.img))
                        {
                            <li><a href=""><img src="@Url.Content(item.img)" /></a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
}


